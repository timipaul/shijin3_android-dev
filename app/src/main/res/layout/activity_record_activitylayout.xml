<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_237"
        android:background="@mipmap/bg_record">
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_alignParentLeft="true"
                android:scaleType="center"
                android:src="@mipmap/goback_white"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_33"
                android:gravity="center"
                android:singleLine="true"
                android:letterSpacing="0.1"
                android:text="@string/record"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>
        <com.hongchuang.hclibrary.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:layout_marginTop="@dimen/dp_85"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/icon_header"/>
        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_107"
            android:layout_marginLeft="@dimen/dp_77"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:text="nickname"/>
        <TextView
            android:id="@+id/share"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_to_long"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="炫耀一下"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_90"
            android:layout_marginRight="@dimen/dp_10"/>
        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_167">
            <TextView
                android:id="@+id/total_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:text="￥11115.00"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#eeeeee"
                android:textSize="@dimen/sp_11"
                android:text="累计投入"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/ln1"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_167">
            <TextView
                android:id="@+id/total_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:text="￥5.00"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#eeeeee"
                android:textSize="@dimen/sp_11"
                android:text="累计获得"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/ln2"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_167">
            <TextView
                android:id="@+id/times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:text="5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#eeeeee"
                android:textSize="@dimen/sp_11"
                android:text="参与次数"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:text="参赛记录"
        android:textColor="@color/text_33"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/refresh"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.hongchuang.hclibrary.recyclerview.PowerfulRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlFinishDuration="0"
            />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
