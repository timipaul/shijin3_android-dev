<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/icon_join">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:scaleType="center"
        android:src="@mipmap/goback_white"
        android:visibility="visible" />
    <LinearLayout
        android:id="@+id/redbag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_360"
        android:background="@mipmap/bg_redbag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/iv_back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥49884"
            android:textColor="@color/white"
            android:textSize="58sp"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_30"
            android:text="答对10道题即可瓜分奖金，已有48562人参加"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="@dimen/dp_293"
            android:layout_height="@dimen/dp_48"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bt_yellow_banyuan"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_20"
            android:text="立即报名 瓜分奖金"/>
        <TextView
            android:id="@+id/tv_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="查看活动规则>>"
            android:textColor="#ffcc00"
            android:layout_marginTop="@dimen/dp_9"/>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/dp_217"
        android:layout_height="@dimen/dp_80"
        android:src="@mipmap/icon_guafen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back"
        app:layout_constraintBottom_toTopOf="@+id/redbag"/>
</android.support.constraint.ConstraintLayout>