<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:text=""
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ln_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45">
            <com.hongchuang.hclibrary.view.CircleImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />
            <ImageView
                android:id="@+id/img_vip_into"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_gravity="bottom|right"
                android:visibility="gone"
                android:src="@mipmap/icon_vip"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:text=""
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text=""
                android:textColor="@color/text_999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_follow"
            android:drawableLeft="@mipmap/icon_isfollow"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:text="@string/isfollow"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <com.hongchuang.hclibrary.view.MyJzvdStd
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_640"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone" />

    <!-- android:layout_height="@dimen/dp_245" -->

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/mine_function_divider" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="@string/recommend"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/text_33"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_18"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_function_divider"/>
    <com.hongchuang.hclibrary.recyclerview.PowerfulRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:id="@+id/recyclerView"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/mine_function_divider"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="@string/comment"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/text_33"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_function_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10">
            <com.hongchuang.hclibrary.view.CircleImageView
                android:id="@+id/img_userhead"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_launcher"
                />
            <ImageView
                android:id="@+id/img_vip2"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="bottom|right"
                android:src="@mipmap/icon_vip"
                android:visibility="gone"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="@dimen/dp_270"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_comment"
            android:paddingLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/sp_15"
            android:text="@string/commend"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>
</LinearLayout>
