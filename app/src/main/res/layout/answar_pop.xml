<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="right"
            android:src="@mipmap/icon_shutdown"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_answar"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_15">
                <com.hongchuang.hclibrary.view.CircleTextProgressbar
                    android:id="@+id/circleProgress"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    app:in_circle_color="#F1F1F3"
                    />
                <ImageView
                    android:id="@+id/icon_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:src="@mipmap/icon_for"/>
                <TextView
                    android:id="@+id/chutdowm"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_centerInParent="true"
                    android:background="@drawable/white_cycle"
                    android:text="15"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_23"
                    android:gravity="center"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_marginRight="@dimen/dp_27"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/text_33"
                android:text=""
                />
            <TextView
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:background="@drawable/answar_before"
                android:padding="@dimen/dp_12"
                android:text="A."
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:background="@drawable/answar_before"
                android:padding="@dimen/dp_12"
                android:text="A."
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:background="@drawable/answar_before"
                android:padding="@dimen/dp_12"
                android:text="A."
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:background="@drawable/answar_before"
                android:padding="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="A."
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/bt_onemore"
                android:layout_width="@dimen/dp_125"
                android:layout_height="@dimen/dp_40"
                android:text="@string/one_more"
                android:layout_marginBottom="@dimen/dp_15"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:background="@drawable/bt_answar"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_wrong"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:text="@string/answer_wrong"
                android:layout_marginBottom="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
