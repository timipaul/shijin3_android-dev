<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/dp_147"
        android:layout_height="@dimen/dp_63"
        android:background="@mipmap/icon_block"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bt_bold"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_11"
            android:scaleType="center"
            android:src="@mipmap/icon_bold"/>
        <ImageView
            android:id="@+id/bt_tilt"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_11"
            android:scaleType="center"
            android:src="@mipmap/icon_tilt"/>
        <ImageView
            android:id="@+id/bt_underline"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_11"
            android:scaleType="center"
            android:src="@mipmap/icon_underline"/>
    </LinearLayout>
</LinearLayout>
