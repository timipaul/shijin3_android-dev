<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/common_title"/>
    <RelativeLayout
        android:id="@+id/rl_id"
        android:layout_width="@dimen/dp_257"
        android:layout_height="@dimen/dp_184"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/bg_waikuang">
        <ImageView
            android:id="@+id/img_id"
            android:layout_width="@dimen/dp_218"
            android:layout_height="@dimen/dp_164"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_yyzz"
            android:scaleType="fitXY"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_camere"/>
    </RelativeLayout>
    <TextView
        android:layout_width="@dimen/dp_204"
        android:layout_height="wrap_content"
        android:text="@string/pls_send_business"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textStyle="bold"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/background_color"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:id="@+id/tv_nosend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="@string/no_send_phone"
        android:textSize="@dimen/sp_12"
        android:visibility="invisible"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_18"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:padding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:background="@drawable/bg_phone_ed"
        android:layout_marginTop="@dimen/dp_5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            android:text="@string/contact"/>
        <EditText
            android:id="@+id/ed_contact"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"/>
        <ImageView
            android:id="@+id/img_contact_miss"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_miss"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:padding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:background="@drawable/bg_phone_ed"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            android:text="@string/tel"/>
        <EditText
            android:id="@+id/ed_tel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_height="match_parent"
            android:background="@null"/>
        <ImageView
            android:id="@+id/img_tel_miss"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_miss"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_unsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/red_cycle"
            android:text="!"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_11"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorPrimary"
            android:text="@string/no_send"
            android:layout_marginLeft="@dimen/dp_5"
            />
    </LinearLayout>
    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_40"
        android:background="@drawable/bt_red"
        android:paddingBottom="@dimen/dp_3"
        android:text="@string/commit_sh"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/careful"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/sp_11"
        android:gravity="center"/>
</LinearLayout>
