<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@color/black" />

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/goods_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="¥23:00"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="x1" />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/goods_img"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/goods_price"
            android:layout_toRightOf="@id/goods_img"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/attriVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/goods_img"
            android:layout_toRightOf="@id/goods_img"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态"
            android:layout_below="@id/goods_num"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"/>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/order_comment"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bt_bg_border_3"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:stateListAnimator="@null"
                android:text="评价"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/order_delete"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/bt_bg_border_3"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/black"
                android:stateListAnimator="@null"
                android:text="删除订单" />

            <Button
                android:id="@+id/order_logistics"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/bt_bg_border_3"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/dp_10"
                android:stateListAnimator="@null"
                android:text="物流信息"/>
        </LinearLayout>



        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00-00 00:00:00"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"/>


    </RelativeLayout>

</LinearLayout>
