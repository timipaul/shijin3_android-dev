<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    >
    <FrameLayout
        android:id="@+id/fl_head"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32">
        <com.hongchuang.hclibrary.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/icon_vip"
            android:visibility="gone"
            android:layout_gravity="bottom|right"
            android:id="@+id/img_vip_into"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nickname"
        android:textColor="@color/text_6"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_16"
        android:layout_toRightOf="@+id/fl_head"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_head"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_33"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="@dimen/dp_5">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/sp_10"
           />
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_comments_3"
            android:drawablePadding="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_999999"/>
        <TextView
            android:id="@+id/tv_givealike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_givealike_5"
            android:drawablePadding="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_999999"/>


    </LinearLayout>
</RelativeLayout>
