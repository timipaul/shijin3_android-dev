<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_63"
        android:background="@mipmap/icon_block_2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bt_black"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_11"
            android:background="@drawable/color_black"
            android:scaleType="center"
            android:src="@drawable/color_black_s"/>
        <ImageView
            android:id="@+id/bt_gray"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_11"
            android:scaleType="center"
            android:src="@drawable/color_gray_s"/>
        <ImageView
            android:id="@+id/bt_red"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_11"
            android:scaleType="center"
            android:src="@drawable/color_red_s"/>
        <ImageView
            android:id="@+id/bt_orange"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_11"
            android:scaleType="center"
            android:src="@drawable/color_orange_s"/>
        <ImageView
            android:id="@+id/bt_green"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_11"
            android:scaleType="center"
            android:src="@drawable/color_green_s"/>
        <ImageView
            android:id="@+id/bt_blue"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_11"
            android:scaleType="center"
            android:src="@drawable/color_blue_s"/>
        <ImageView
            android:id="@+id/bt_purple"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_11"
            android:scaleType="center"
            android:src="@drawable/color_purple_s"/>
    </LinearLayout>
</LinearLayout>
