<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/common_title"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_16">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/data_yesterday"
                    android:layout_marginLeft="@dimen/dp_20"
                    />
                <TextView
                    android:id="@+id/tv_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:textColor="@color/text_999999"
                    android:textSize="@dimen/sp_14"
                    android:text="数据更新至"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_show_num"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/sp_24"
                    android:textColor="@color/text_33"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_click_new"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/sp_24"
                    android:textColor="@color/text_33"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_share_num"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/sp_24"
                    android:textColor="@color/text_33"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ad_show_num"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_33"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ad_click_num"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_33"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ad_share_num"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_33"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_star_num"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/sp_24"
                    android:textColor="@color/text_33"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_like_num"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/sp_24"
                    android:textColor="@color/text_33"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_comment_num"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/sp_24"
                    android:textColor="@color/text_33"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ad_star_num"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_33"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ad_like_num"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_33"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ad_comment"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_33"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@color/mine_function_divider"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/near_ad"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_20"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_near_7day"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/bt_choice_day"
                    android:text="@string/near_7day"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_near_30day"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/bt_unchoice_day"
                    android:text="@string/near_30day"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    android:textColor="@color/text_33"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/bt_unchoice_day"
                    android:text="2018年 06月 11日"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:drawableRight="@mipmap/icon_down"
                    android:textSize="@dimen/sp_13"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:textColor="@color/text_33"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text_33"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/bt_unchoice_day"
                    android:text="2018年 06月 11日"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:drawableRight="@mipmap/icon_down"
                    android:textSize="@dimen/sp_13"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:textColor="@color/text_33"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_25"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/total_num"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="共0条资讯"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_6"/>
                <TextView
                    android:id="@+id/tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_24"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:background="@drawable/bg_sort"
                    android:text="@string/sort"
                    android:textColor="@color/text_33"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_4"
                    android:drawableRight="@mipmap/icon_dropdown"/>
            </LinearLayout>
            <com.hongchuang.hclibrary.recyclerview.PowerfulRecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/recyclerView"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
