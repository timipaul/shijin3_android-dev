<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/bg_data_ad"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_33"
        android:text=""
        android:textSize="@dimen/sp_15"
        android:singleLine="true"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_14"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_999999"/>
        <TextView
            android:id="@+id/tv_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_liulan"
            android:text=""
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_13"
            android:drawablePadding="@dimen/dp_5"/>
        <TextView
            android:id="@+id/tv_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_dianji"
            android:text=""
            android:layout_marginLeft="@dimen/dp_30"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_13"
            android:drawablePadding="@dimen/dp_5"/>
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/icon_arraw"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_10">
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:background="@color/mine_function_divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:id="@+id/tv_liuran"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_liulan"
                android:text="2689"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:drawablePadding="@dimen/dp_5"/>
            <TextView
                android:id="@+id/tv_dianji"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_dianji"
                android:text="2689"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:drawablePadding="@dimen/dp_5"/>
            <TextView
                android:id="@+id/tv_zhuanfa"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_zhuanfa"
                android:text="2689"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:drawablePadding="@dimen/dp_5"/>
            <TextView
                android:id="@+id/tv_shoucang"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_shoucang"
                android:text="2689"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:drawablePadding="@dimen/dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15">
            <TextView
                android:id="@+id/tv_pinglun"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_pinglun"
                android:text="2689"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:drawablePadding="@dimen/dp_5"/>
            <TextView
                android:id="@+id/tv_dianzan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_givealike"
                android:text="2689"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:drawablePadding="@dimen/dp_5"/>
            <TextView
                android:id="@+id/tv_xie"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_xie"
                android:text="2689"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:drawablePadding="@dimen/dp_5"/>
            <TextView
                android:id="@+id/tv_dadui"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_dadui"
                android:text="2689"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:drawablePadding="@dimen/dp_5"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
