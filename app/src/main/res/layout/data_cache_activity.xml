<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/common_title"/>

    <LinearLayout
        android:id="@+id/ln_auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            android:text="@string/wifi_auto"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/img_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_off"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="@string/clear_cache"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_33"
        android:drawableRight="@mipmap/jiantou"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_function_divider"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/sp_14"
        android:text="清理本地缓存数据只会移除所有媒体文件以减轻当前应用的存储空间，在需要的时候所有内容将会重新从服务器下载到本地。"/>

</LinearLayout>
