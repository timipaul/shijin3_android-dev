<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/day_task_banner_ic" />


            <!-- 签到 -->
            <RelativeLayout
                style="@style/task_layout"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:id="@+id/signin_img_ic"
                    style="@style/day_task_img"
                    android:src="@mipmap/task_signin_ic" />

                <TextView
                    android:id="@+id/signin_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/signin_img_ic"
                    android:text="@string/signin" />

                <TextView
                    android:id="@+id/signin_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/signin_title"
                    android:layout_toRightOf="@+id/signin_img_ic"
                    android:text="@string/signin_hint" />

                <Button
                    android:id="@+id/signin_but"
                    style="@style/new_person_task_but"
                    android:text="@string/task_statue_off" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_3"
                android:background="@color/color_eee" />

            <!-- 转发 -->
            <RelativeLayout
                style="@style/task_layout">

                <ImageView
                    android:id="@+id/transpond_img_ic"
                    style="@style/day_task_img"
                    android:src="@mipmap/task_transmit_ic" />

                <TextView
                    android:id="@+id/transpond_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/transpond_img_ic"
                    android:text="@string/transpond" />

                <TextView
                    android:id="@+id/transpond_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/transpond_title"
                    android:layout_toRightOf="@+id/transpond_img_ic"
                    android:text="@string/transpond_hint" />

                <Button
                    android:id="@+id/transpond_but"
                    style="@style/new_person_task_but"
                    android:text="@string/task_statue_off" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/transpond_hint"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/transpond_img_ic"
                    android:background="@color/color_eee" />
            </RelativeLayout>

            <!-- 点赞 -->
            <RelativeLayout
                style="@style/task_layout">

                <ImageView
                    android:id="@+id/like_img_ic"
                    style="@style/day_task_img"
                    android:src="@mipmap/task_like_ic" />

                <TextView
                    android:id="@+id/like_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/like_img_ic"
                    android:text="@string/ad_like" />

                <TextView
                    android:id="@+id/like_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/like_title"
                    android:layout_toRightOf="@+id/like_img_ic"
                    android:text="@string/day_task_like_hint" />

                <Button
                    android:id="@+id/like_but"
                    style="@style/new_person_task_but"
                    android:text="@string/task_statue_off" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/like_hint"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/like_img_ic"
                    android:background="@color/color_eee" />
            </RelativeLayout>

            <!-- 评论 -->
            <RelativeLayout
                style="@style/task_layout">

                <ImageView
                    android:id="@+id/comment_img_ic"
                    style="@style/day_task_img"
                    android:src="@mipmap/task_comment_ic" />

                <TextView
                    android:id="@+id/comment_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/comment_img_ic"
                    android:text="@string/comment" />

                <TextView
                    android:id="@+id/comment_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/comment_title"
                    android:layout_toRightOf="@+id/comment_img_ic"
                    android:text="@string/day_task_comment_hint" />

                <Button
                    android:id="@+id/comment_but"
                    style="@style/new_person_task_but"
                    android:text="@string/task_statue_off" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/comment_hint"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/comment_img_ic"
                    android:background="@color/color_eee" />
            </RelativeLayout>

            <!-- 发布 -->
            <RelativeLayout
                style="@style/task_layout">

                <ImageView
                    android:id="@+id/issue_img_ic"
                    style="@style/day_task_img"
                    android:src="@mipmap/task_issue_ic" />

                <TextView
                    android:id="@+id/issue_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/issue_img_ic"
                    android:text="@string/publish" />

                <TextView
                    android:id="@+id/issue_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/issue_title"
                    android:layout_toRightOf="@+id/issue_img_ic"
                    android:text="@string/day_task_issue_hint" />

                <Button
                    android:id="@+id/issue_but"
                    style="@style/new_person_task_but"
                    android:text="@string/task_statue_off" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/issue_hint"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/issue_img_ic"
                    android:background="@color/color_eee" />
            </RelativeLayout>

            <!-- 关注 -->
            <RelativeLayout
                style="@style/task_layout"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:id="@+id/attention_img_ic"
                    style="@style/day_task_img"
                    android:src="@mipmap/task_attention_ic" />

                <TextView
                    android:id="@+id/attention_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/attention_img_ic"
                    android:text="@string/user_like" />

                <TextView
                    android:id="@+id/attention_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/attention_title"
                    android:layout_toRightOf="@+id/attention_img_ic"
                    android:text="@string/day_task_attention_hint" />

                <Button
                    android:id="@+id/attention_but"
                    style="@style/new_person_task_but"
                    android:text="@string/task_statue_off" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_3"
                android:background="@color/color_eee" />

            <!-- 互动问答 -->
            <RelativeLayout
                style="@style/task_layout">

                <ImageView
                    android:id="@+id/answer_img_ic"
                    style="@style/day_task_img"
                    android:layout_width="@dimen/dp_30"
                    android:src="@mipmap/task_answer_ic" />

                <TextView
                    android:id="@+id/answer_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/answer_img_ic"
                    android:text="@string/whole_answer" />

                <TextView
                    android:id="@+id/answer_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/answer_title"
                    android:layout_toRightOf="@+id/answer_img_ic"
                    android:text="@string/day_task_answer_hint" />

                <Button
                    android:id="@+id/answer_but"
                    style="@style/new_person_task_but"
                    android:text="@string/task_statue_off" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/answer_hint"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/answer_img_ic"
                    android:background="@color/color_eee" />
            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
