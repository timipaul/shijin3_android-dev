<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">
    <include layout="@layout/common_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_30"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_14"
                android:text="@string/must_item"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/bg_yj_1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_25">
                    <LinearLayout
                        android:id="@+id/ln_take_suggest"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_suggest"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_13"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/radio_button_on"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/take_suggest"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/text_33"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ln_have_error"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_have_error"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_13"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/radio_button_off"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/have_error"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/text_33"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ln_no_understand"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_no_understand"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_13"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/radio_button_off"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_understand"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/text_33"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_60">
                    <LinearLayout
                        android:id="@+id/ln_bad_use"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_bad_use"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_13"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/radio_button_off"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bad_use"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/text_33"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ln_other"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_other"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_13"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/radio_button_off"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/other"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/text_33"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_13"
                            android:src="@mipmap/radio_button_off"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_understand"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/text_33"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/mine_function_divider"
                    android:layout_marginTop="@dimen/dp_97"/>
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="0/200"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/text_999999"
                    android:textSize="@dimen/sp_13"/>
                <EditText
                    android:id="@+id/ed_detail_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/line"
                    android:background="@null"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:maxLength="200"
                    android:hint="@string/plz_detail_question"
                    android:textSize="@dimen/sp_14"
                    android:gravity="top"
                    android:layout_above="@+id/tv_total"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_30"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_14"
                android:text="@string/must_item"
                />
            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_put_qq"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:digits="1234567890qwertyuiopasdfghjklzxcvbnm@."
                android:layout_marginTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_20"
                android:hint="@string/plz_phone"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_8"/>
            <Button
                android:id="@+id/commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:background="@drawable/bt_red"
                android:layout_marginTop="@dimen/dp_32"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/dp_3"
                android:text="@string/commit"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/sp_11"
                android:text="@string/click_down_group"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:id="@+id/tv_qq_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:text="@string/qq_group"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_11"/>
            <TextView
                android:id="@+id/tv_wechat_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/sp_11"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/wechat_num"
                android:layout_marginTop="@dimen/dp_3"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
