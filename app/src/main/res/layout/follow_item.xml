<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="@dimen/dp_70"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:id="@+id/radio_button"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/radio_button_off"
        />
    <com.hongchuang.hclibrary.view.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:src="@mipmap/ic_launcher"
        android:layout_toRightOf="@+id/radio_button"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_head"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:text="xx关注了你"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_toRightOf="@+id/img_head"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/tv_time"
        android:text="2018-3-29"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_999999"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_function_divider"/>
</RelativeLayout>
