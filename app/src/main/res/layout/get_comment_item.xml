<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_10"
    >
    <ImageView
        android:id="@+id/radio_button"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/radio_button_off"
        />
    <FrameLayout
        android:id="@+id/fl_head"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_alignTop="@+id/tv_name"
        android:layout_toRightOf="@+id/radio_button"
        android:layout_marginLeft="@dimen/dp_10">
        <com.hongchuang.hclibrary.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/img_vip_into"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:visibility="gone"
            android:layout_gravity="bottom|right"
            android:src="@mipmap/icon_vip"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:layout_toRightOf="@+id/fl_head"
        android:layout_marginLeft="@dimen/dp_10"
        android:maxLines="2"
        android:layout_marginRight="@dimen/dp_10"
        android:ellipsize="end"
        android:text="nickname"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fl_head"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/dp_10"

        android:text="《这个说话》"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fl_head"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:maxLines="2"
        android:ellipsize="end"
        android:text=""
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_13"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03-29 22:25"
        android:id="@+id/tv_time"
        android:layout_toRightOf="@+id/fl_head"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_999999"
        android:layout_below="@+id/tv_content"
        />
    <TextView
        android:id="@+id/request"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#5c97d8"
        android:text="@string/request"
        android:textSize="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/tv_content"
        android:layout_alignParentRight="true"
      />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/mine_function_divider"/>
</RelativeLayout>
