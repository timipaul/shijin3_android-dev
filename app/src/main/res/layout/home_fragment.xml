<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:background="@color/color_f5" />

    <TextView
        android:id="@+id/tv_locate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_32"
        android:drawableLeft="@mipmap/icon_locate"
        android:drawablePadding="@dimen/dp_5"
        android:text="未知"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/icon_guide"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_selete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/tv_guide"
        android:layout_toRightOf="@+id/tv_locate"
        android:background="@drawable/home_bg"
        android:drawableLeft="@mipmap/icon_select"
        android:drawablePadding="@dimen/dp_4"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_8"
        android:text="请输入商家/商品"
        android:textColor="#cccccc"
        android:textSize="@dimen/sp_14" />

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_below="@+id/view" />

    <android.support.design.widget.TabLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/tv_selete"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:visibility="gone"
        app:tabIndicatorColor="@color/transparent"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#E01F22"
        app:tabTextColor="@color/text_33">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近" />

    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/indicator" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/indicator"
        android:background="@color/mine_function_divider" />

    <RelativeLayout
        android:id="@+id/goods_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@color/color_ff8">

        <!-- android:background="@color/btransparent90" -->

        <ImageView
            android:id="@id/goods_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/goods_hint_ic" />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/goods_img"
            android:singleLine="true"
            android:text="@string/loing_show_prize_hint"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/goods_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/task_button_orange_border"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/get_prize"
            android:textColor="@color/task_but_border" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/gif_img"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_above="@+id/goods_layout"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        tools:visibility="gone" />
</RelativeLayout>