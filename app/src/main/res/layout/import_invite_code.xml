<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <com.hubcloud.adhubsdk.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        ads:adUnitId="@string/banner_ad_unit_id" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/invite_code_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/invite_code_layou"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="false"
                    android:text="邀请码填写"
                    android:textColor="@color/text_33"
                    android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/invite_code_point" />

            </RelativeLayout>


            <EditText
                android:id="@+id/edit_code"
                android:layout_width="247dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@mipmap/edit_code_bg"
                android:gravity="center"
                android:hint="请填写好友给的邀请码"
                android:lineSpacingMultiplier="1"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/error_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="你输入的邀请码错误"
                android:textColor="@color/text_color_ccf"
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="每个人只能填写一次邀请码"
                android:textColor="@color/text_33"
                android:textSize="15sp" />


            <Button
                android:id="@+id/code_button"
                android:layout_width="256dp"
                android:layout_height="45dp"
                android:background="@drawable/bt_red"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_6"
                android:text="提交邀请码"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
