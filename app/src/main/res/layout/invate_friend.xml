<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/common_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_invate_2"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:background="#ff5128"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_laba"
                        android:layout_marginLeft="@dimen/dp_10"/>
                    <com.sunfusheng.marqueeview.MarqueeView
                        android:layout_width="match_parent"
                        android:id="@+id/marquee_view"
                        android:layout_height="match_parent"
                        app:mvDirection="bottom_to_top"
                        app:mvTextColor="@color/white"
                        app:mvTextSize="@dimen/sp_13"
                        app:mvSingleLine="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_23"
                    android:layout_marginRight="@dimen/dp_23"
                    android:background="@mipmap/pic"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_147">
                    <ImageView
                        android:id="@+id/bt_invite_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/icon_button"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_155"
                    android:layout_marginLeft="@dimen/dp_23"
                    android:layout_marginRight="@dimen/dp_23"
                    android:background="@drawable/bg_invite"
                    android:layout_marginTop="@dimen/dp_30"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_23"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_get_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/invite_money"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16" />
                        <TextView
                            android:id="@+id/tv_people_num"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:text="@string/invite_people"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_6"
                        android:background="@color/invite"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_13"/>
                    <ImageView
                        android:id="@+id/bt_invite_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/icon_button_1"
                        android:layout_marginTop="@dimen/dp_15"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_invate_1"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_invite_now"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/icon_fenxiang"
            android:text="@string/share_now"
            android:textSize="@dimen/sp_12"
            android:paddingTop="@dimen/dp_7"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_invite_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/icon_erweima"
            android:text="@string/invite_code"
            android:textSize="@dimen/sp_12"
            android:paddingTop="@dimen/dp_7"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_invite_face"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/icon_mianduimian"
            android:text="@string/invite_face"
            android:textSize="@dimen/sp_12"
            android:paddingTop="@dimen/dp_7"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_invite_group"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/icon_qunfa"
            android:text="@string/invite_group"
            android:textSize="@dimen/sp_12"
            android:paddingTop="@dimen/dp_7"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>
