<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_1">

    <com.hongchuang.hclibrary.view.CircleImageView
        android:id="@+id/user_head"
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_41" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/user_head"
        android:text="**"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/sign_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/username"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/username"
        android:text="团队数:"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/group_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/username"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@id/sign_1"
        android:text="0"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:id="@+id/personage_layout"
        android:layout_width="@dimen/dp_90"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/username"
        android:layout_toRightOf="@id/user_head"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人业绩"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/individual_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_14"
            android:text="00.00" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_90"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignTop="@id/personage_layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团队业绩"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_2"
            android:text="00.00" />


    </LinearLayout>




</RelativeLayout>