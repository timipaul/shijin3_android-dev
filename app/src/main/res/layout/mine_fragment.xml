<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_194"
            android:background="@color/white"
            android:paddingTop="@dimen/dp_5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_172"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@mipmap/icon_mine" />

            <ImageView
                android:id="@+id/img_notica"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_47"
                android:layout_marginRight="@dimen/dp_4"
                android:scaleType="center"
                android:src="@mipmap/icon_mess" />

            <TextView
                android:id="@+id/tv_noread"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_57"
                android:layout_marginRight="@dimen/dp_33"
                android:background="@drawable/thumb_yellow"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_vip"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_marginTop="@dimen/dp_26"
                android:src="@mipmap/icon_vip_head"
                android:visibility="gone" />

            <com.hongchuang.hclibrary.view.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_43"
                android:background="@mipmap/oval_head_ic"
                android:src="@mipmap/ic_launcher" />
            <!-- ic_launcher -->
            <!-- android:src="@mipmap/ic_launcher" -->

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_avatar"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_avatar"
                android:text=""
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tv_locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nickname"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toRightOf="@+id/img_avatar"
                android:drawableLeft="@mipmap/icon_positioning_2"
                android:drawablePadding="@dimen/dp_3"
                android:text="未知"
                android:textColor="@color/text_6"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ln_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:drawableLeft="@mipmap/icon_wallet"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="0.00"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="零钱"
                        android:textColor="@color/text_999999"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_vertical"
                    android:background="@color/mine_function_divider" />

                <LinearLayout
                    android:id="@+id/ln_point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:drawableLeft="@mipmap/icon_coins"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="0.00"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="金币"
                        android:textColor="@color/text_999999"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="@dimen/dp_5"

            android:background="@color/white" />


        <ImageView
            android:id="@+id/img_vip_into"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@mipmap/icon_menber_entrance" />

        <LinearLayout
            android:id="@+id/ln_myad"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_myad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableLeft="@mipmap/icon_gg"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_8"
                android:text="发布资讯"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_shenqing"
                android:layout_width="@dimen/dp_67"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bt_half_red"
                android:gravity="center"
                android:text="申请认证"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>


        <TextView
        android:id="@+id/tv_vip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:drawableLeft="@mipmap/mine_member_icon"
        android:drawableRight="@mipmap/jiantou"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_8"
        android:text="会员机制"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/white"
            android:drawableLeft="@mipmap/mine_member_icon"
            android:drawableRight="@mipmap/jiantou"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_8"
            android:text="优惠券"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_looked"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/white"
            android:drawableLeft="@mipmap/icon_yj"
            android:drawableRight="@mipmap/jiantou"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_8"
            android:text="我看过的"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_conversion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/white"
            android:drawableLeft="@mipmap/mine_conversion_icon"
            android:drawableRight="@mipmap/jiantou"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_8"
            android:text="我兑换的"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_rush"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/white"
            android:drawableLeft="@mipmap/mine_rush_icon"
            android:drawableRight="@mipmap/jiantou"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_8"
            android:text="我抢购的"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_gz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/white"
            android:drawableLeft="@mipmap/icon_gz"
            android:drawableRight="@mipmap/jiantou"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_8"
            android:text="@string/myfollow"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_sc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/white"
            android:drawableLeft="@mipmap/icon_sc"
            android:drawableRight="@mipmap/jiantou"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_8"
            android:text="我收藏的"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_tg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            android:drawableLeft="@mipmap/icon_mall"
            android:drawableRight="@mipmap/jiantou"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_8"
            android:text="十金特供"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <WebView
            android:id="@+id/webview"
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_yj"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            android:drawableLeft="@mipmap/icon_feedback"
            android:drawableRight="@mipmap/jiantou"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_8"
            android:text="意见反馈"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_sj"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/white"
            android:drawableLeft="@mipmap/icon_sj"
            android:drawableRight="@mipmap/jiantou"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_8"
            android:text="数据与缓存"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_sz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@color/white"
            android:drawableLeft="@mipmap/icon_sz"
            android:drawableRight="@mipmap/jiantou"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_8"
            android:text="设置"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

</ScrollView>
