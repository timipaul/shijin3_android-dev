<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_62"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_32"
            android:drawableLeft="@mipmap/icon_locate"
            android:drawablePadding="@dimen/dp_5"
            android:text="未知"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/icon_guide"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_selete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tv_guide"
            android:layout_toRightOf="@+id/tv_locate"
            android:background="@drawable/home_bg"
            android:drawableLeft="@mipmap/icon_select"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_8"
            android:text="请输入商家/商品"
            android:textColor="#cccccc"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_empty"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@mipmap/icon_placeholder_empty"
            android:text="@string/empty"
            android:drawablePadding="@dimen/dp_25"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_33"
            />
    </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/refresh"
        android:background="@color/white"
        android:overScrollMode="never">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="center"
            android:src="@mipmap/freshing"
            app:layout_srlSpinnerStyle="Scale"
            app:layout_srlBackgroundColor="@android:color/transparent"/>
        <com.hongchuang.hclibrary.recyclerview.PowerfulRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:overScrollMode="never"
            />
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlFinishDuration="0"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
