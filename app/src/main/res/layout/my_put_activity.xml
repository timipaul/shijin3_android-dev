<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">
    <include layout="@layout/common_title"/>
    <LinearLayout
        android:id="@+id/ln_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_placeholder_release"
            android:text="@string/myad_empty"
            android:drawablePadding="@dimen/dp_25"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_33"/>
        <TextView
            android:id="@+id/tv_put"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_43"
            android:background="@drawable/bt_red"
            android:layout_marginTop="@dimen/dp_50"
            android:text="@string/put_ad_now"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/dp_3"
            android:textSize="@dimen/sp_16"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/total_put"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_15"
            />
        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:background="@drawable/bg_sort"
            android:text="@string/sort"
            android:textColor="@color/text_33"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_4"
            android:drawableRight="@mipmap/icon_dropdown"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_function_divider"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:background="@color/white"
        android:id="@+id/refresh">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="center"
            android:src="@mipmap/freshing"
            app:layout_srlSpinnerStyle="Scale"
            app:layout_srlBackgroundColor="@android:color/transparent"/>

        <com.hongchuang.hclibrary.recyclerview.PowerfulRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:background="@color/white"
            android:id="@+id/recyclerView"/>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlFinishDuration="0"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
