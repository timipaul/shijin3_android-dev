<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/task_new_person_ic"/>

            <!-- 完善资料 -->
            <RelativeLayout style="@style/task_layout">

                <ImageView
                    android:id="@+id/my_data_img_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/change_data_ic" />

                <TextView
                    android:id="@+id/my_data_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/my_data_img_ic"
                    android:text="@string/perfect_my_data" />

                <TextView
                    android:id="@+id/my_data_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/my_data_title"
                    android:layout_toRightOf="@+id/my_data_img_ic"
                    android:text="@string/my_data_task_hint" />

                <Button
                    android:id="@+id/my_data_but"
                    style="@style/new_person_task_but"
                    android:text="@string/immediately_perfection" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/my_data_hint"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/my_data_img_ic"
                    android:background="@color/color_eee" />
            </RelativeLayout>
            <!-- 邀请码 -->
            <RelativeLayout style="@style/task_layout">

                <ImageView
                    android:id="@+id/code_img_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/invitation_code_task_ic" />

                <TextView
                    android:id="@+id/code_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/code_img_ic"
                    android:text="@string/write_invite" />

                <TextView
                    android:id="@+id/code_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/code_title"
                    android:layout_toRightOf="@+id/code_img_ic"
                    android:text="@string/invitation_code_task_hint" />

                <Button
                    android:id="@+id/code_but"
                    style="@style/new_person_task_but"
                    android:text="@string/immediately_write" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/code_hint"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/code_img_ic"
                    android:background="@color/color_eee" />
            </RelativeLayout>
            <!-- 邀请好友 -->
            <RelativeLayout
                style="@style/task_layout"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:id="@+id/invite_img_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/invitation_friend_task_ic" />

                <TextView
                    android:id="@+id/invite_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/invite_img_ic"
                    android:text="@string/invite_friend" />

                <TextView
                    android:id="@+id/invite_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/invite_title"
                    android:layout_toRightOf="@+id/invite_img_ic"
                    android:text="@string/invitation_friend_hint" />

                <Button
                    android:id="@+id/invite_but"
                    style="@style/new_person_task_but"
                    android:text="@string/immediately_invite" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_3"
                android:background="@color/color_eee" />

            <!-- 发图文  -->
            <RelativeLayout style="@style/task_layout">

                <ImageView
                    android:id="@+id/send_img_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/img_task_ic" />

                <TextView
                    android:id="@+id/send_img_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/send_img_ic"
                    android:text="@string/send_one_img" />

                <TextView
                    android:id="@+id/send_img_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/send_img_title"
                    android:layout_toRightOf="@+id/send_img_ic"
                    android:text="@string/first_issue_img_hint" />

                <Button
                    android:id="@+id/send_img_but"
                    style="@style/new_person_task_but"
                    android:text="@string/immediately_issue" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/send_img_hint"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/send_img_ic"
                    android:background="@color/color_eee" />
            </RelativeLayout>
            <!-- 发视频  -->
            <RelativeLayout style="@style/task_layout">

                <ImageView
                    android:id="@+id/send_video_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/video_task_ic" />

                <TextView
                    android:id="@+id/send_video_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/send_video_ic"
                    android:text="@string/send_one_video" />

                <TextView
                    android:id="@+id/send_video_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/send_video_title"
                    android:layout_toRightOf="@+id/send_video_ic"
                    android:text="@string/first_issue_video_hint" />

                <Button
                    android:id="@+id/send_video_but"
                    style="@style/new_person_task_but"
                    android:text="@string/immediately_issue" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/send_video_hint"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@+id/send_video_ic"
                    android:background="@color/color_eee" />
            </RelativeLayout>
            <!-- 互动问答  -->
            <RelativeLayout
                style="@style/task_layout"
                android:paddingBottom="@dimen/dp_15">

                <ImageView
                    android:id="@+id/answer_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/interaction_task_ic" />

                <TextView
                    android:id="@+id/answer_title"
                    style="@style/new_person_task_title"
                    android:layout_toRightOf="@+id/answer_ic"
                    android:text="@string/whole_answer" />

                <TextView
                    android:id="@+id/answer_hint"
                    style="@style/new_person_task_hint"
                    android:layout_below="@+id/answer_title"
                    android:layout_toRightOf="@+id/answer_ic"
                    android:text="@string/first_finish_answer_hint" />

                <Button
                    android:id="@+id/answer_but"
                    style="@style/new_person_task_but"
                    android:text="@string/immediately_join" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_3"
                android:background="@color/color_eee" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center"
                    android:background="@color/orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/activity_rule"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_eee" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:textColor="@color/color_333"
                android:lineSpacingExtra="@dimen/dp_10"
                android:text="@string/new_person_task_rule" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
