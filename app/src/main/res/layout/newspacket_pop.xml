<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_gravity="right"
            android:src="@mipmap/icon_shutdown"
            />
        <RelativeLayout
            android:id="@+id/ln_redpackter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_340"
            android:background="@mipmap/icon_redpacket_5"
            >
            <TextView
                android:id="@+id/get"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_43"
                android:layout_marginRight="@dimen/dp_43"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bt_half_red"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="立即领取"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_23"
                android:layout_above="@+id/get"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="打开得66元"/>
            <TextView
                android:layout_width="@dimen/dp_11"
                android:layout_height="wrap_content"
                android:text="最高"
                android:background="#DB9430"
                android:textSize="@dimen/sp_9"
                android:layout_above="@+id/get"
                android:layout_marginBottom="@dimen/dp_22"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="#ffe3bb"
                android:layout_toRightOf="@+id/tv"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
