<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_gravity="right"
            android:src="@mipmap/icon_shutdown"
            />
        <LinearLayout
            android:id="@+id/ln_redpackter"
            android:layout_width="@dimen/dp_245"
            android:layout_height="@dimen/dp_300"
            android:background="@mipmap/icon_redpacket_4"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_35"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="10"
                    android:textColor="#f5c702"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/vip_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_point"
                    android:textColor="#df3b1d"
                    android:textSize="45sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/youget"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                >
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:text="10"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/point"
                   android:textSize="@dimen/sp_15"
                   android:textColor="@color/white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/bt_share"
                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/bt_yellow"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_15"
                android:text="@string/change_point"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
