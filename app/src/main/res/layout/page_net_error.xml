<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:gravity="bottom">
        <ImageView
            android:id="@+id/error_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:scaleType="center"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_70"
        android:background="@color/background_color">
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_100"
            android:src="@mipmap/icon_placeholder_network"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginTop="@dimen/dp_26"
            android:gravity="center"
            android:text="@string/net_error"
            android:textColor="@color/text_33"
            android:visibility="visible"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/bt_red"
            android:layout_marginLeft="@dimen/dp_43"
            android:layout_marginRight="@dimen/dp_43"
            android:layout_below="@+id/tv"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/refresh"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/dp_3"
            />
    </RelativeLayout>
</RelativeLayout>