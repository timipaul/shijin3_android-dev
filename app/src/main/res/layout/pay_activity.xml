<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">
    <include layout="@layout/common_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_6"
            android:text="@string/pay_money"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¥"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_15"
            />
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/text_33"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:text="@string/choice_pay_type"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16"
            android:gravity="center_vertical"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/mine_function_divider"/>
        <LinearLayout
            android:id="@+id/ln_balance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rb_balance"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/radio_button_on"
                android:layout_marginLeft="@dimen/dp_10"/>
            <ImageView
                android:id="@+id/img_balance"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/icon_balance_2"
                android:layout_marginLeft="@dimen/dp_2"/>
            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_14"
                android:text="@string/shijin_balance"/>
            <TextView
                android:id="@+id/tv_balance2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_999999"
                android:text="@string/balance"
                android:layout_marginRight="@dimen/dp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_alipay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rb_alipay"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/radio_button_off"
                android:layout_marginLeft="@dimen/dp_10"/>
            <ImageView
                android:id="@+id/img_alipay"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/icon_alipay_2"
                android:layout_marginLeft="@dimen/dp_2"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/alipay"/>
                <TextView
                    android:id="@+id/tv_alipay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/sp_12"
                    android:text="@string/limit"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_alipay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#cccccc"
                android:text="@string/morethan1"
                android:layout_marginRight="@dimen/dp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_wechat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rb_wechat"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/radio_button_off"
                android:layout_marginLeft="@dimen/dp_10"/>
            <ImageView
                android:id="@+id/img_wechat"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/icon_wechat_pay"
                android:layout_marginLeft="@dimen/dp_2"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/wechat"/>
                <TextView
                    android:id="@+id/tv_wechat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/sp_12"
                    android:text="@string/limit"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_wechat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#cccccc"
                android:text="@string/morethan1"
                android:layout_marginRight="@dimen/dp_10"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_pay_now"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_43"
        android:layout_marginRight="@dimen/dp_43"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:text="@string/pay_now"
        android:paddingBottom="@dimen/dp_3"
        android:background="@drawable/bt_red"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/pay_prompt"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/sp_12"/>
</LinearLayout>
