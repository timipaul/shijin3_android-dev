<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_centerInParent="true"
        android:background="@drawable/home_bg"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:text="@string/pay"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/text_33"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/mine_function_divider"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_18"
                android:text="Â¥"/>
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/sp_32"
                android:textColor="@color/text_33"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_balance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rb_balance"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/radio_button_on"
                android:layout_marginLeft="@dimen/dp_10"/>
            <ImageView
                android:id="@+id/img_balance"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/icon_balance_2"
                android:layout_marginLeft="@dimen/dp_2"/>
            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_14"
                android:text="@string/shijin_balance"/>
            <TextView
                android:id="@+id/tv_balance2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_999999"
                android:text="@string/balance"
                android:layout_marginRight="@dimen/dp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_alipay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rb_alipay"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/radio_button_off"
                android:layout_marginLeft="@dimen/dp_10"/>
            <ImageView
                android:id="@+id/img_alipay"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/icon_alipay_2"
                android:layout_marginLeft="@dimen/dp_2"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/alipay"/>
                <TextView
                    android:id="@+id/tv_alipay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/limit"/>
            </LinearLayout>
             <TextView
                 android:id="@+id/tv_alipay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_999999"
                android:text="@string/morethan1"
                android:layout_marginRight="@dimen/dp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_wechat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rb_wechat"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/radio_button_off"
                android:layout_marginLeft="@dimen/dp_10"/>
            <ImageView
                android:id="@+id/img_wechat"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/icon_wechat_pay"
                android:layout_marginLeft="@dimen/dp_2"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/wechat"/>
                <TextView
                    android:id="@+id/tv_wechat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/limit"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_wechat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_999999"
                android:text="@string/morethan1"
                android:layout_marginRight="@dimen/dp_10"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/commit"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/bt_half_red"
            android:text="@string/commit_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_30"
            />
    </LinearLayout>

</RelativeLayout>