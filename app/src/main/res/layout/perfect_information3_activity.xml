<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/your_income"
        android:layout_marginTop="@dimen/dp_85"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_other"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_46"
        android:layout_marginTop="@dimen/dp_140"
        android:layout_marginLeft="@dimen/dp_120"
        android:background="@mipmap/icon_circle_green"
        android:text="@string/other"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        />
    <ImageView
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignStart="@id/tv_other"
        android:layout_alignBottom="@+id/tv_other"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_34"
        android:src="@mipmap/bt_sex_nochecked"/>
    <TextView
        android:id="@+id/tv_2k"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_185"
        android:layout_marginLeft="@dimen/dp_182"
        android:background="@mipmap/icon_circle_red"
        android:text="@string/less_2k"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        />
    <ImageView
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignStart="@id/tv_2k"
        android:layout_alignBottom="@+id/tv_2k"
        android:layout_marginLeft="@dimen/dp_41"
        android:layout_marginBottom="@dimen/dp_46"
        android:src="@mipmap/bt_sex_nochecked"/>
    <TextView
        android:id="@+id/tv_5k"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_289"
        android:layout_marginLeft="@dimen/dp_198"
        android:background="@mipmap/icon_circle_orange"
        android:text="2K~5K"
        android:gravity="center"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        />
    <ImageView
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_17"
        android:layout_alignStart="@id/tv_5k"
        android:layout_alignBottom="@+id/tv_5k"
        android:layout_marginLeft="@dimen/dp_49"
        android:layout_marginBottom="@dimen/dp_54"
        android:src="@mipmap/bt_sex_nochecked"/>
    <TextView
        android:id="@+id/tv_10k"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:layout_marginTop="@dimen/dp_306"
        android:layout_marginLeft="@dimen/dp_82"
        android:background="@mipmap/icon_circle_pink"
        android:text="5K~10K"
        android:gravity="center"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        />
    <ImageView
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_17"
        android:layout_alignStart="@id/tv_10k"
        android:layout_alignBottom="@+id/tv_10k"
        android:layout_marginLeft="@dimen/dp_56"
        android:layout_marginBottom="@dimen/dp_67"
        android:src="@mipmap/bt_sex_nochecked"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_486"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bg_pig"
        />
    <TextView
        android:id="@+id/tv_20k"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_95"
        android:layout_marginTop="@dimen/dp_400"
        android:layout_marginLeft="@dimen/dp_134"
        android:background="@mipmap/icon_circle_blue"
        android:text="10K~20K"
        android:gravity="center"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        />
    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignStart="@id/tv_20k"
        android:layout_alignBottom="@+id/tv_20k"
        android:layout_marginLeft="@dimen/dp_64"
        android:layout_marginBottom="@dimen/dp_71"
        android:src="@mipmap/bt_sex_nochecked"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:src="@mipmap/icon_dot3"/>
</RelativeLayout>
