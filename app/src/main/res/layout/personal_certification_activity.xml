<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include layout="@layout/common_title"/>
    <RelativeLayout
        android:id="@+id/rl_idfont"
        android:layout_width="@dimen/dp_137"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_92"
        android:layout_marginLeft="@dimen/dp_27"
        android:background="@mipmap/bg_waikuang">
        <ImageView
            android:id="@+id/img_id_font"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_71"
            android:layout_centerInParent="true"
            android:src="@mipmap/bg_id_font"
            android:scaleType="fitXY"
            />
        <ImageView
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_29"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_camere"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_idback"
        android:layout_width="@dimen/dp_137"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_92"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_27"
        android:background="@mipmap/bg_waikuang">
        <ImageView
            android:id="@+id/img_id_back"
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_71"
            android:layout_centerInParent="true"
            android:src="@mipmap/bg_id_back"
            android:scaleType="fitXY"
            />
        <ImageView
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_29"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_camere"/>
    </RelativeLayout>
    <TextView
        android:layout_width="@dimen/dp_137"
        android:layout_height="wrap_content"
        android:text="@string/pls_send_idfont"
        android:layout_below="@id/rl_idfont"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_10"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/rl_idfont"/>
    <TextView
        android:layout_width="@dimen/dp_137"
        android:layout_height="wrap_content"
        android:text="@string/pls_send_idback"
        android:layout_below="@id/rl_idfont"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_10"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/rl_idback"/>
    <RelativeLayout
        android:id="@+id/rl_id"
        android:layout_width="@dimen/dp_204"
        android:layout_height="@dimen/dp_150"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_idfont"
        android:layout_marginTop="@dimen/dp_72"
        android:background="@mipmap/bg_waikuang">
        <ImageView
            android:id="@+id/img_id"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_115"
            android:layout_centerInParent="true"
            android:src="@mipmap/bg_get_id"
            android:scaleType="fitXY"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_camere"/>
    </RelativeLayout>
    <TextView
        android:layout_width="@dimen/dp_204"
        android:layout_height="wrap_content"
        android:text="@string/pls_send_id"
        android:layout_below="@id/rl_id"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_10"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/rl_id"/>
    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_below="@id/rl_id"
        android:layout_marginTop="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_40"
        android:background="@drawable/bt_red"
        android:paddingBottom="@dimen/dp_3"
        android:text="@string/commit_sh"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/careful"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/sp_11"
        android:layout_below="@id/commit"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/ln_unsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_below="@id/rl_id"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/red_cycle"
            android:text="!"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_11"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorPrimary"
            android:text="@string/no_send"
            android:layout_marginLeft="@dimen/dp_5"
            />
    </LinearLayout>
    
</RelativeLayout>
