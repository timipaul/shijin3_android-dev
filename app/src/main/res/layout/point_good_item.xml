<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_104"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_15">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:background="@color/mine_function_divider"/>
    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_113"
        android:layout_height="@dimen/dp_76"
        android:scaleType="fitXY"
        android:src="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_33"
        android:layout_toRightOf="@+id/img"
        android:layout_marginLeft="@dimen/dp_6"
        android:maxEms="13"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/tv_name"
        android:text="name"/>
    <TextView
        android:id="@+id/tv_exchange_aday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@id/tv_name"
        android:text="@string/exchange_aday"
        android:textColor="@color/text_6"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_exchange"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_exchange_aday"
        android:background="@drawable/bt_oragen_5"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:text="@string/exchange"/>

    <!-- android:background="@drawable/bt_buy" -->
    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_exchange_aday"
        android:layout_alignBottom="@+id/img"
        android:text="@string/point"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_17"/>

    <TextView
        android:id="@+id/tv_exchanged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img"
        android:layout_alignParentRight="true"
        android:text="@string/exchanged"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
