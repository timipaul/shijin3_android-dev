<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/color_white_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <View
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_2"
                android:background="@color/color_fcb"
                android:layout_marginTop="@dimen/dp_65"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_55"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="榜单说明"/>

            <LinearLayout
                android:id="@+id/text_hint_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hint"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/star_ic"
                        android:paddingRight="@dimen/dp_5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ranking_hint_1"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:gravity="left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/star_ic"
                        android:paddingRight="@dimen/dp_5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ranking_hint_2"
                        android:textSize="@dimen/sp_14"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:textColor="@color/black"
                        android:gravity="left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/star_ic"
                        android:paddingRight="@dimen/dp_5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ranking_hint_3"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:gravity="left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/star_ic"
                        android:paddingRight="@dimen/dp_5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ranking_hint_4"
                        android:textSize="@dimen/sp_14"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:textColor="@color/black"
                        android:gravity="left"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/text_hint_layout"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_30"
                android:minWidth="@dimen/dp_0"
                android:minHeight="@dimen/dp_0"
                android:background="@drawable/bt_shade_orange_10"
                android:paddingLeft="@dimen/dp_45"
                android:paddingRight="@dimen/dp_45"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:text="联系客服,领取奖励"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_95"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ranking_ic" />





    </RelativeLayout>
</RelativeLayout>
