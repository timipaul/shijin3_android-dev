<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_132">
    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_157"
        android:layout_height="@dimen/dp_103"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@color/black"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/img"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="1231213131"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/text_33"
        android:layout_marginRight="@dimen/dp_7"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/sp_12"
        android:text="2017-07-01"/>
    <TextView
        android:id="@+id/tv_givealike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text_999999"
        android:text="12"
        android:drawablePadding="@dimen/dp_5"
        android:layout_alignBottom="@+id/img"
        android:layout_toLeftOf="@+id/img"
        android:layout_marginRight="@dimen/dp_10"
        android:drawableLeft="@mipmap/icon_givealike_2"/>
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text_999999"
        android:text="12"
        android:visibility="gone"
        android:drawablePadding="@dimen/dp_5"
        android:layout_toLeftOf="@+id/tv_givealike"
        android:layout_marginRight="@dimen/dp_15"
        android:drawableLeft="@mipmap/icon_comments_2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/mine_function_divider"/>
</RelativeLayout>
