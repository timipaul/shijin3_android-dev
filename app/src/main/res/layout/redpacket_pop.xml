<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_gravity="right"
            android:src="@mipmap/icon_shutdown"
            />
        <LinearLayout
            android:id="@+id/ln_redpackter"
            android:layout_width="@dimen/dp_245"
            android:layout_height="@dimen/dp_318"
            android:background="@mipmap/icon_redpacket"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:text="@string/congratulations"
                android:textSize="@dimen/sp_24"
                android:textColor="#ffe58a"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffe58a"
                android:textSize="@dimen/sp_24"
                android:text="@string/get_redpackter"
                android:layout_marginTop="@dimen/dp_10"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
