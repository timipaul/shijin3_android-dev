<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:scaleType="center"
        android:src="@mipmap/icon_back" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_62"
        android:text="@string/register"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_24" />

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_52"
        android:background="@null"
        android:hint="@string/edt_phone"
        android:inputType="phone"
        android:maxLength="11"
        android:textSize="@dimen/dp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_52"
        android:background="@color/mine_function_divider" />

    <LinearLayout
        android:id="@+id/ln_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_52"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/ed_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/plz_into_code"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/img_code"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_30"
            android:scaleType="fitXY"
            android:src="@color/gray1" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_52"
        android:background="@color/mine_function_divider"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_get_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/bt_selector"
        android:enabled="false"
        android:paddingBottom="@dimen/dp_3"
        android:text="@string/get_code"
        android:textColor="@color/white"
        tools:visibility="visible" />
</LinearLayout>
