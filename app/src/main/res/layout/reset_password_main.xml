<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:scaleType="center"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/icon_back"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_62"
        android:layout_marginLeft="@dimen/dp_52"
        android:text="@string/change_password"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_24"/>
    <EditText
        android:id="@+id/ed_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_52"
        android:inputType="textPassword"
        android:maxLength="11"
        android:hint="@string/put_first_pwd"
        android:textSize="@dimen/dp_15"
        android:background="@null"
        android:layout_marginTop="@dimen/dp_40"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_function_divider"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_10"
        />
    <EditText
        android:id="@+id/ed_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_52"
        android:inputType="textPassword"
        android:maxLength="11"
        android:hint="@string/put_new_pwd"
        android:textSize="@dimen/dp_15"
        android:background="@null"
        android:layout_marginTop="@dimen/dp_26"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_function_divider"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_10"
        />
    <EditText
        android:id="@+id/ed_pwd_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_52"
        android:inputType="textPassword"
        android:maxLength="11"
        android:hint="@string/put_pwd_again"
        android:textSize="@dimen/dp_15"
        android:background="@null"
        android:layout_marginTop="@dimen/dp_26"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_function_divider"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_10"
        />
    <Button
        android:id="@+id/bt_get_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_3"
        android:enabled="false"
        android:background="@drawable/bt_red"
        android:text="@string/define_change_pwd"
        android:textColor="@color/white"/>
</LinearLayout>
