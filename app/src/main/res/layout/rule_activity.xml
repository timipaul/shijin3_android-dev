<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_rule"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_alignParentLeft="true"
            android:scaleType="center"
            android:src="@mipmap/goback_white"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_33"
            android:gravity="center"
            android:singleLine="true"
            android:letterSpacing="0.1"
            android:text="@string/rule"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_18">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4D88FF"
                    android:text="1"
                    android:background="@mipmap/icon_rule_item"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:text="@string/rule1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:lineSpacingExtra="@dimen/dp_8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_18">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4D88FF"
                    android:text="2"
                    android:background="@mipmap/icon_rule_item"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:text="@string/rule2"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:lineSpacingExtra="@dimen/dp_8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_18">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4D88FF"
                    android:text="3"
                    android:background="@mipmap/icon_rule_item"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:text="@string/rule3"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:lineSpacingExtra="@dimen/dp_8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_18">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4D88FF"
                    android:text="4"
                    android:background="@mipmap/icon_rule_item"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:text="@string/rule4"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:lineSpacingExtra="@dimen/dp_8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_18">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4D88FF"
                    android:text="5"
                    android:background="@mipmap/icon_rule_item"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:text="@string/rule5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:lineSpacingExtra="@dimen/dp_8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_30"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_18">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4D88FF"
                    android:text="6"
                    android:background="@mipmap/icon_rule_item"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:text="@string/rule6"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:lineSpacingExtra="@dimen/dp_8"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
