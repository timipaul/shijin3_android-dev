<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_function_divider"
        android:layout_alignParentBottom="true"/>
    <FrameLayout
        android:id="@+id/fl_head"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10">
        <com.hongchuang.hclibrary.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/ic_launcher"
            />
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="bottom|right"
            android:src="@mipmap/icon_vip"
            android:id="@+id/img_vip_into"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_follow"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/bg_follow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:drawableLeft="@mipmap/icon_isfollow"
        android:paddingLeft="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/isfollow"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/sp_15"
        />
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fl_head"
        android:layout_alignTop="@+id/fl_head"
        android:layout_toLeftOf="@+id/tv_follow"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:singleLine="true"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_33"
        />
    <TextView
        android:id="@+id/tv_fansnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fl_head"
        android:layout_toLeftOf="@+id/tv_follow"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:singleLine="true"
        android:layout_below="@+id/tv_nickname"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_33"
        />
</RelativeLayout>
