<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:scaleType="center"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/icon_back"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_52"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ed_pwd"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:background="@null"
            android:textSize="@dimen/sp_15"
            android:layout_gravity="center_vertical"
            android:inputType="textPassword"
            android:hint="@string/pwd_combination"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_code"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/icon_eyes_close"
            android:scaleType="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_function_divider"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_10"
        />
    <EditText
        android:id="@+id/ed_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_52"
        android:hint="@string/confirm_pwd"
        android:inputType="textPassword"
        android:textSize="@dimen/dp_15"
        android:background="@null"
        android:layout_marginTop="@dimen/dp_20"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_function_divider"
        android:layout_marginLeft="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_10"
        />

    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_3"
        android:background="@drawable/bt_red"
        android:text="@string/confirm"
        android:textColor="@color/white"/>
</LinearLayout>
