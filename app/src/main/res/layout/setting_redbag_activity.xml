<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common50_title" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:overScrollMode="never">
            <View
                android:id="@+id/top_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/mine_function_divider"/>
            <TextView
                android:id="@+id/tv_unput"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@color/colorPrimary"
                android:text="@string/more_than_01"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:visibility="gone"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/bg_data_ad"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/red_bag_num"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_15" />

                    <EditText
                        android:id="@+id/et_red_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="@string/edit_num"
                        android:textCursorDrawable="@null"
                        android:inputType="number"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="@string/num"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/bg_data_ad"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_money"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_15" />

                    <EditText
                        android:id="@+id/ed_money"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:gravity="right|center_vertical"
                        android:hint="@string/edit_money"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="@string/yuan"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>
                <TextView
                    android:id="@+id/shui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_999999"
                    android:text="@string/shui"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_setting_redbag"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ed_question"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_weight="1"
                        android:background="@null"
                        android:maxLength="35"
                        android:gravity="center_vertical"
                        android:hint="@string/plz_put_question"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_18"
                        android:gravity="center"
                        android:text="0/35"
                        android:textColor="@color/text_999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/mine_function_divider"/>
                <LinearLayout
                    android:id="@+id/ln_answer1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/ed_answer1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:maxLength="15"
                        android:hint="@string/more_than_15"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_15" />

                    <ImageView
                        android:id="@+id/img_answer1"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_selected_3"
                        android:textColor="@color/text_999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/mine_function_divider"/>
                <LinearLayout
                    android:id="@+id/ln_answer2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/ed_answer2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:maxLength="15"
                        android:hint="@string/more_than_15"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_15" />

                    <ImageView
                        android:id="@+id/img_answer2"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_selected_3"
                        android:textColor="@color/text_999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/mine_function_divider"/>
                <LinearLayout
                    android:id="@+id/ln_answer3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/ed_answer3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:maxLength="15"
                        android:hint="@string/more_than_15"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_15" />

                    <ImageView
                        android:id="@+id/img_answer3"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_selected_3"
                        android:textColor="@color/text_999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/mine_function_divider"/>
                <LinearLayout
                    android:id="@+id/ln_answer4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/ed_answer4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:maxLength="15"
                        android:hint="@string/more_than_15"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_15" />

                    <ImageView
                        android:id="@+id/img_answer4"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_selected_3"
                        android:textColor="@color/text_999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>
                <EditText
                    android:id="@+id/ed_url"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_33"
                    android:hint="@string/put_url"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/bg_setting_redbag"
                    android:singleLine="true"
                    android:gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/tv_preview"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/bg_normal_dialog"
                    android:gravity="center"
                    android:textColor="@color/text_999999"
                    android:textSize="@dimen/sp_15"
                    android:text="@string/preview"
                    />
                <TextView
                    android:id="@+id/publish"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/bt_put"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:text="@string/publish"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
