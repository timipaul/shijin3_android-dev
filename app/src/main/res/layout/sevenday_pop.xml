<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="right"
            android:src="@mipmap/icon_shutdown"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_answar"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_245"
                android:background="@drawable/bg_red_half"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_23"
                    android:layout_marginTop="@dimen/dp_23"
                    android:gravity="center"
                    android:text="@string/sevenday_get"/>
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/white"
                    android:text="@string/sevenday_get2"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    />

                <ImageView
                    android:id="@+id/img"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="@dimen/dp_130"
                    android:layout_height="@dimen/dp_130"
                    android:src="@mipmap/liwu"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_96"
                android:background="@drawable/bg_white_half_bottom"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_43"
                    android:layout_marginRight="@dimen/dp_43"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center"
                    android:text="@string/share_to_friend"
                    android:background="@drawable/bt_red_20"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
