<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/btransparent90">


    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_280"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/dp_15"
        android:background="@drawable/bg_video_comment"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_35"
            android:layout_gravity="center_horizontal"
            android:text="选择地址标签"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />


        <TextView
            android:id="@+id/label_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:drawableLeft="@mipmap/site_home_ic"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_5"
            android:text="家"/>

        <TextView
            android:id="@+id/label_company"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:drawableLeft="@mipmap/site_company_ic"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_5"
            android:text="公司"/>

        <TextView
            android:id="@+id/label_school"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:drawableLeft="@mipmap/site_school_ic"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_5"
            android:text="学校"/>

    </LinearLayout>
</RelativeLayout>