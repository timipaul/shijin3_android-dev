<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_f1">

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/white" />

    <TextView
        android:id="@+id/name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_item"
        android:layout_toRightOf="@id/img_item"
        android:ellipsize="end"
        android:text="标题"
        android:lines="2"
        android:textSize="@dimen/sp_14"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/hint_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_item"
        android:layout_toRightOf="@id/img_item"
        android:maxLength="18"
        android:text="描述文字"
        android:textSize="@dimen/sp_12" />



    <TextView
        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_item"
        android:layout_toRightOf="@id/img_item"
        android:text="¥138.50"
        android:textColor="@color/color_bf"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_item"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:text="x1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>
