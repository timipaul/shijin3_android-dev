<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/black" />

    <TextView
        android:id="@+id/name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_item"
        android:layout_toRightOf="@id/img_item"
        android:maxLength="15"
        android:text="标题"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/hint_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_item"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/img_item"
        android:maxLength="18"
        android:text="描述文字"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/repertory_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hint_item"
        android:layout_toRightOf="@id/img_item"
        android:text="库存数量"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/capacity_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_below="@id/hint_item"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_toRightOf="@id/repertory_item"
    android:text="200ml/瓶"
    android:textSize="8sp"
    android:background="@color/color_fc4"/>


    <TextView
        android:id="@+id/new_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_item"
        android:layout_toRightOf="@id/img_item"
        android:text="￥138.50"
        android:textColor="@color/color_fc4"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/new_price"
        android:layout_toRightOf="@id/new_price"
        android:text="￥158.00"
        android:textSize="@dimen/sp_10" />


    <Button
        android:id="@+id/sub_item"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_20"
        android:layout_alignBottom="@id/img_item"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/button_bg_shade_20"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="立即抢"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>
