<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30">


        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="@dimen/dp_180"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/button_circular_white_5">

            <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_30"
                android:lineHeight="@dimen/dp_30"
                android:text="@string/task_attention_wechat_hint"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/button"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"
                android:layout_below="@id/hint"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/button_circular_green_3"
                android:minHeight="@dimen/dp_30"
                android:text="复制并关注"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@null"
                android:minHeight="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/pop_close_ic" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
