<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_114"
        android:layout_height="@dimen/dp_75"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@color/black"
        android:layout_marginRight="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_toLeftOf="@+id/img"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="1231213131"
        android:lineSpacingExtra="@dimen/dp_8"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_33"
        android:layout_marginRight="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignBottom="@+id/img"
        android:text="2018-10-1 11:22"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/sp_12"
        android:layout_marginRight="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:visibility="gone"
        android:layout_alignBottom="@+id/img"
        android:layout_toLeftOf="@+id/img"
        android:layout_marginRight="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_givealike"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_999999"
            android:text="12"
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/icon_givealike_2"/>
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:gravity="center_vertical"
            android:textColor="@color/text_999999"
            android:text="12"
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/icon_comments_2"/>
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_999999"
            android:text="12"
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/icon_share"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_999999"
            android:text="12"
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/icon_like_3"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/mine_function_divider"/>

</RelativeLayout>
