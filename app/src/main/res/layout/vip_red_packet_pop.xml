<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_gravity="right"
            android:src="@mipmap/icon_shutdown" />

        <RelativeLayout
            android:id="@+id/ln_redpackter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_340"
            android:background="@mipmap/vip_red_packet">

            <TextView
                android:id="@+id/money_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_90"
                android:text="0"
                android:textColor="@color/center_card_bg_color"
                android:textSize="40sp" />



            <TextView
                android:id="@+id/money_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money_num"
                android:layout_centerHorizontal="true"
                android:text="红包"
                android:textColor="@color/red"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/hint_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money_hint"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/vip_packet_money_hint"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/get"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_43"
                android:layout_marginRight="@dimen/dp_43"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/bt_half_orange"
                android:gravity="center"
                android:text="马上提现"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
