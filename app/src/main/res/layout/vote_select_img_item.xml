<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/layout_rectangle_bg"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="@dimen/dp_159"
        android:layout_height="@dimen/dp_114"
        android:layout_centerHorizontal="true"
        android:background="@color/black" />

    <TextView
        android:id="@+id/num_id"
        android:layout_width="23dp"
        android:layout_height="27dp"
        android:layout_alignLeft="@+id/item_img"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@mipmap/vote_number_ic"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_2"
        android:text="01"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_6"
        android:text="名字"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="@dimen/dp_121"
        android:layout_height="@dimen/dp_28"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/color_gray_5">


        <ImageView
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_11"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@mipmap/read_main_like_off" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/white" />

        <TextView
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="256"
            android:textColor="@color/color_e"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>
