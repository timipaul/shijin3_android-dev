<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_204"
        android:background="@mipmap/bg_pocket"/>
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_alignParentLeft="true"
            android:scaleType="center"
            android:src="@mipmap/goback_white"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_33"
            android:gravity="center"
            android:singleLine="true"
            android:letterSpacing="0.1"
            android:text="@string/my_wallet"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_97"
        android:textSize="33sp"
        android:textColor="@color/white"
        android:text="0"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_toLeftOf="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ï¿¥"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_108"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/now_balance"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:layout_below="@+id/money"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_52"
        android:background="@mipmap/bg_pocket2"
        android:layout_alignBottom="@+id/img1"
        android:layout_marginBottom="-26dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/tv_withdraw"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/withdraw"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_33"
            />
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_23"
            android:background="@color/mine_function_divider"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/record"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/record"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_33"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ln1"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_40"
        >
        <LinearLayout
            android:id="@+id/ln_point"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/point"
                android:drawableLeft="@mipmap/icon_integral"
                android:gravity="center_vertical"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_6"/>
            <TextView
                android:id="@+id/tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/text_999999"
                android:layout_marginRight="@dimen/dp_10"
                android:text="0"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@mipmap/jiantou"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/mine_function_divider"/>
        <LinearLayout
            android:id="@+id/ln_shijin_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/shijin_box"
                android:drawableLeft="@mipmap/icon_treasurechest"
                android:gravity="center_vertical"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/text_999999"
                android:layout_marginRight="@dimen/dp_10"
                android:text="@string/box_prompt"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@mipmap/jiantou"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/mine_function_divider"/>
    </LinearLayout>

</RelativeLayout>
