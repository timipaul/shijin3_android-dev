<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:orientation="vertical"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_67"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_alipay_3"
            android:layout_marginTop="@dimen/dp_18"/>
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16"
            android:text="@string/unbind_alipay"/>
        <Button
            android:id="@+id/bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_63"
            android:layout_marginRight="@dimen/dp_63"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:text="@string/bind_now"
            android:paddingBottom="@dimen/dp_3"
            android:background="@drawable/bt_red"/>
    </LinearLayout>
</LinearLayout>
