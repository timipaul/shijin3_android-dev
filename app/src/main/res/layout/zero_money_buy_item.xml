<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="125dp"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_10">


    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_103"
        android:layout_height="@dimen/dp_103"
        android:layout_marginRight="@dimen/dp_5"

        android:background="@color/white_f0"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/img"
        android:text="name"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15" />

    <!-- android:ellipsize="end"
        android:maxEms="13"
        android:singleLine="true" -->

    <TextView
        android:id="@+id/tv_exchange_aday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/zero_buy_hint"
        android:textColor="@color/tt_rating_star"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@mipmap/button_gray_bg"
        android:gravity="center"
        android:text="抢购"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_point_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_exchange_aday"
        android:layout_alignBottom="@+id/img"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="￥"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_toRightOf="@+id/tv_point_1"
        android:text="0"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_exchanged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_point_1"
        android:text="@string/exchanged"
        android:textSize="@dimen/sp_11" />
</RelativeLayout>
